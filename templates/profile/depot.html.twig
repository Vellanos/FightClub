{% extends 'base.html.twig' %}

{% block title %}Déposer de l'argent
{% endblock %}

{% block body %}
	{% if user is not empty %}
		<div class="container">
			<div class="row justify-content-center mt-5">
				<div class="col-md-6">
					<h2 class="text-center mb-4">Quel montant veux-tu déposer ?</h2>
					{{ form_start(editForm, {'attr': {'class': 'form'}}) }}
					<div class="mb-3">
						{{ form_label(editForm.wallet, 'Montant à déposer', {'label_attr': {'class': 'form-label'}}) }}
						{{ form_widget(editForm.wallet, {'attr': {'class': 'form-control text-center ', 'placeholder': '0€', 'type': 'number', 'min': '0'}}) }}
						{{ form_errors(editForm.wallet) }}
					</div>
					<div class="text-center">
						<button type="submit" class="btn bg-red-details font-weight-bolder">Déposer</button>
                        <a class="btn bg-grey-details font-weight-bolder" href="{{ path('app_profile', {'id': user.id}) }}">Retour</a>
					</div>
					{{ form_end(editForm) }}
				</div>
			</div>
		</div>
	{% endif %}
{% endblock %}
